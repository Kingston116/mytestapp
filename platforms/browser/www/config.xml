<?xml version='1.0' encoding='utf-8'?>
<widget id="com.appmetricsoft.news" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>theviewpod</name>
    <description>
        A News App.
    </description>
    <author email="kingston.samselwyn@appmetricsoft.com" href="http://cordova.io">
        Appmetric Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <access launch-external="yes" origin="*" />
    <allow-navigation href="*" />
    <icon src="www/img/icon.png" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
</widget>
